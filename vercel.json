{
  "version": 2,
  "builds": [
    { 
      "src": "api/index.php", 
      "use": "vercel-php@0.7.1"
    },
    { 
      "src": "api/app.py", 
      "use": "@vercel/python" 
    },
    {
      "src": "coin-web/vendor/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/python/(.*)", "dest": "api/app.py" },
    { "src": "/(.*)", "dest": "api/index.php" }
  ]
}