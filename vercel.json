{
  "version": 2,
  "builds": [
    { 
      "src": "api/index.php", 
      "use": "vercel-php@0.7.1",
      "config": { "command": "cd coin-web && composer install --no-dev" }
    },
    { "src": "api/app.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/api/python/(.*)", "dest": "api/app.py" },
    { "src": "/(.*)", "dest": "api/index.php" }
  ]
}